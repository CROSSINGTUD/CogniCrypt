get-button "Integrate a Cryptographic Task into CogniCrypt" | click
with [get-window -class WizardDialog] {
    get-group "Choose the mode of this Wizard" | get-editbox -after [get-label "Name of the Task"] 
        | set-text UpDownCheck
    with [get-button "Next >"] {
        click
        click
    }
    get-button "Add Question" | click
    with [get-window -class QuestionDialog] {
        with [get-editbox -after [get-label Question]] {
            set-text Q0
            key-type "TRAVERSE_TAB_NEXT"
        }
        with [get-combo -after [get-label "Answer type"]] {
            select "Drop down"
            key-type "TRAVERSE_TAB_NEXT"
        }
        get-button "Add Answer" | click
        get-group "" | get-editbox | set-text ans1
        get-button "Add Answer" | click
        get-group "" -after [get-label "Answer type"] -index 1 | get-editbox | set-text ans2
        get-button OK | click
    }
}
with [get-window -class WizardDialog | get-group "" -index 1] {
    get-button Up | get-property "isEnabled()" | equals false | verify-true
    get-button Down | get-property "isEnabled()" | equals false | verify-true
}
with [get-window -class WizardDialog] {
    get-button "Add Question" | click
    with [get-window -class QuestionDialog] {
        with [get-editbox -after [get-label Question]] {
            set-text Q1
            key-type "TRAVERSE_TAB_NEXT"
        }
        with [get-combo -after [get-label "Answer type"]] {
            select "Drop down"
            key-type "TRAVERSE_TAB_NEXT"
        }
        with [get-button "Add Answer"] {
            click
            click
        }
        get-group "" | get-editbox | set-text ans1
        get-group "" -after [get-label "Answer type"] -index 1 | get-editbox | set-text ans
    }
}
with [get-window -class WizardDialog | get-window -class QuestionDialog] {
    get-group "" -after [get-label "Answer type"] -index 1 | get-editbox | set-focus
    get-button OK | click
}
with [get-window -class WizardDialog] {
    with [get-group "" -index 1] {
        get-button Up | get-property "isEnabled()" | equals false | verify-true
        get-button Down | get-property "isEnabled()" | equals true | verify-true
    }
    with [get-group "" -index 3] {
        get-button Up | get-property "isEnabled()" | equals true | verify-true
        get-button Down | get-property "isEnabled()" | equals false | verify-true
    }
}
with [get-window -class WizardDialog] {
    get-editbox -after [get-label "Add the high level questions and their dependencies here"] | click-text "1:122"
    get-button "Add Question" | click
    with [get-window -class QuestionDialog] {
        get-editbox -after [get-label Question] | set-text Q3
        get-combo -after [get-label "Answer type"] | select "Text box"
        get-button OK | click
    }
}
with [get-window -class WizardDialog | get-group "" -index 5] {
    get-button Up | get-property "isEnabled()" | equals true | verify-true
    get-button Down | get-property "isEnabled()" | equals false | verify-true
}

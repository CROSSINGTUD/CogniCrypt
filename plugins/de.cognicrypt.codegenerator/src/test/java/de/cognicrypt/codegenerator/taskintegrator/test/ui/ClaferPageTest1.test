------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-button "Integrate a Cryptographic Task into CogniCrypt" | click
with [get-window -class WizardDialog] {
    with [get-group "Choose the mode of this Wizard"] {
        with [get-editbox -after [get-label "Name of the Task"]] {
            set-text ClaferPageTest
            key-type "TRAVERSE_TAB_NEXT"
        }
        get-editbox -after [get-label "Description of the Task :"] | set-text "Clafer page widgets test"
    }
    get-button "Next >" | click
    get-button "Add Feature" | click
    with [get-window -class ClaferFeatureDialog] {
        with [get-editbox -after [get-label "Type in the name"]] {
            set-text test1
            set-text Feature
            key-type "M1+a"
            key-type "M1+c"
            key-type Right
            set-text Feature1
        }
        get-button OK | click
    }
    get-button "Add Feature" | click
    with [get-window -class ClaferFeatureDialog] {
        with [get-editbox -after [get-label "Type in the name"]] {
            click-text
            key-type "M1+v"
            set-text Feature2
        }
        get-combo -after [get-label "Inherits from"] | select Feature1
        get-button "Add property" | click
        get-editbox -after [get-label Name] | set-text prop1
        get-combo -after [get-label "is of type"] | select Feature1
        get-button "Add property" | click
        get-editbox -after [get-label Name -after [get-label "is of type"]] | set-text prop2
        get-combo -after [get-label "is of type" -after [get-label Name -after [get-label "is of type"]]] 
            | select Feature1
        get-button OK | click
    }
    get-button "Add Feature" | click
    with [get-window -class ClaferFeatureDialog] {
        get-button Instance | click
        with [get-editbox -after [get-label "Type in the name"]] {
            set-text ""
            key-type "M1+v"
            set-text FeatureInstance
            key-type "TRAVERSE_TAB_NEXT"
        }
        get-combo -after [get-label Implements] | select Feature2
        get-button "Add property" | click
        with [get-editbox -after [get-label Name]] {
            set-text prop1
            key-type "TRAVERSE_TAB_NEXT"
        }
        get-combo -after [get-label "is of type"] | select Feature2
        get-button "Add constraint" | click
        with [get-window -class ClaferConstraintDialog] {
            with [get-tree] {
                get-item "abstract Feature2: Feature1/prop1 -> Feature1" | click
                select "abstract Feature2: Feature1/prop1 -> Feature1" | double-click
                get-item "abstract Feature2: Feature1/prop1 -> Feature1" | click
            }
            get-group "" | get-button EQUALS | click
            get-editbox | set-text "Feature2.prop1 =sdcds"
            get-button OK | click
        }
        get-button Remove | click
        get-button OK | click
    }
    get-button Modify -index 2 | click
    with [get-window -class ClaferFeatureDialog] {
        get-editbox -after [get-label "Type in the name"] | set-text FeatureInstancE
        get-button OK | click
    }
}
set-dialog-result MessageBox 64
get-window -class WizardDialog | get-button Delete | click

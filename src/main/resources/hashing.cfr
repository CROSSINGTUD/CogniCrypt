abstract Algorithm
    name -> string
    performance -> integer
    xor status
    	secure
    	insecure

abstract Digest : Algorithm
        outputSize -> integer

abstract KeyDerivationAlgorithm : Algorithm

abstract MAC: Algorithm


//group digest algorithms together
//for easier viewing/collapsing etc.
